<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="coupGameMaster" class="com.neodem.coup.server.game.CoupGameMaster"/>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="coupServer"/>
        <property name="service" ref="coupServer"/>
        <property name="serviceInterface" value="com.neodem.coup.common.messaging.CoupServer"/>
        <property name="registryPort" value="1199"/>
    </bean>

    <bean id="coupServer" class="com.neodem.coup.server.network.RmiCoupServer">
        <property name="messageTranslator" ref="messageTranslator"/>
        <property name="cgm" ref="coupGameMaster"/>
    </bean>

    <bean id="messageTranslator" class="com.neodem.coup.common.messaging.JsonMessageTranslator"/>

</beans>