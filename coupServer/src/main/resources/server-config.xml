<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="coupGameMaster" class="com.neodem.coup.server.game.CoupGameMaster"/>

    <bean id="coupServer" class="com.neodem.coup.server.game.BandaidGameServer" init-method="startCoupServer">
        <property name="messageTranslator" ref="messageTranslator"/>
        <property name="gameMaster" ref="coupGameMaster"/>
        <property name="comServer" ref="communicationsServer"/>
    </bean>

    <bean id="messageTranslator" class="com.neodem.coup.common.messaging.JsonCoupMessageTranslator"/>

    <bean id="communicationsServer" class="com.neodem.coup.common.network.ComServer"/>

</beans>