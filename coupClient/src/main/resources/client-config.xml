<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="coupClient" class="com.neodem.coup.client.network.CoupClient">
        <property name="gateway" ref="networkGateway"/>
    </bean>

    <bean id="networkGateway" class="com.neodem.coup.client.network.NetworkGateway">
        <property name="messageTranslator" ref="messageTranslator"/>
        <property name="coupServer" ref="coupServer"/>
    </bean>

    <bean id="coupServer" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/coupServer"/>
        <property name="serviceInterface" value="com.neodem.coup.common.messaging.CoupServer"/>
    </bean>

    <bean id="messageTranslator" class="com.neodem.coup.common.messaging.JsonMessageTranslator"/>

</beans>