<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="coupClient" class="com.neodem.coup.client.RmiCoupClient">
        <property name="coupServer" ref="coupServer"/>
    </bean>

    <bean id="coupServer" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/CoupServer"/>
        <property name="serviceInterface" value="com.neodem.coup.server.CoupServer"/>
    </bean>

</beans>